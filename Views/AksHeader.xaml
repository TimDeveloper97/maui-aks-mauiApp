<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSmauiApp.Views.AksHeader">
    <Frame BackgroundColor="WhiteSmoke" 
               CornerRadius="0"
               BorderColor="Transparent">
        <Grid ColumnDefinitions="150,*">
            <Image Grid.Column="0" Source="logo.png" />

            <VerticalStackLayout Grid.Column="1" Spacing="10">
                <VerticalStackLayout Spacing="0">
                    <Label Text="User" FontAttributes="Bold" FontSize="12" />
                    <Label Text="{Binding Path=Name}" />
                </VerticalStackLayout>
                <VerticalStackLayout Spacing="0">
                    <Label Text="Address" FontAttributes="Bold" FontSize="12" />
                    <Label Text="{Binding Path=Address}" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </Frame>
</ContentView>
